<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/TwitterActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/TwitterTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/TwitterTabText</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TwitterActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/primary_blue</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TwitterTabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@color/secondary_gary_5</item>
    </style>


    <style name="TwitterTabText" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:textColor">@color/primary_blue</item>
    </style>
</resources>
